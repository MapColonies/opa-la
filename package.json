    "@map-colonies/prettier-config": "^0.0.1",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "lerna": "^6.5.1",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.1.4",
    "jest-openapi": "^0.14.2",
    "typescript": "^4.9.5"
