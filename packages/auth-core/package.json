{
  "name": "auth-core",
  "version": "0.0.0",
  "description": "package for auth types and functions",
  "author": "MapColonies",
  "homepage": "https://github.com/MapColonies/opa-la#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/opa-la.git"
  },
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "typeorm": "node --require ts-node/register ../../node_modules/typeorm/cli.js -d ./dataSource.ts",
    "migration:create": "npm run typeorm migration:generate --",
    "migration:run": "npm run typeorm migration:run -- ",
    "migration:revert": "npm run typeorm migration:revert -- ",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && npm run assets:copy",
    "prepublish": "npm run build",
    "assets:copy": "copyfiles ./package.json dist",
    "clean": "rimraf dist"
  },
  "bugs": {
    "url": "https://github.com/MapColonies/opa-la/issues"
  },
  "dependencies": {
    "@map-colonies/js-logger": "^0.0.5",
    "@map-colonies/read-pkg": "0.0.1",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "config": "^3.3.9",
    "@types/node": "^18.15.5",
    "@types/pg": "^8.6.6",
    "@types/pg-pool": "^2.0.3",
    "copyfiles": "^2.4.1",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
