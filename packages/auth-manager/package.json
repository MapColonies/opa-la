{
  "name": "auth-manager",
  "version": "1.3.0",
  "description": "API server for managing all the authentication data",
  "author": "MapColonies",
  "homepage": "https://github.com/MapColonies/opa-la#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/opa-la.git"
  },
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "cross-env CONFIG_OFFLINE_MODE=true jest --config=./tests/configurations/integration/jest.config.js --runInBand",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typeorm": "node ../../node_modules/typeorm/cli.js -d ./dataSource.mjs",
    "migration:create": "npm run typeorm migration:generate --",
    "migration:run": "npm run typeorm migration:run -- ",
    "migration:revert": "npm run typeorm migration:revert -- ",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:openapi": "redocly lint --config ../../.redocly.yaml openapi3.yaml",
    "test": "tsc --noEmit && npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run assets:copy",
    "build:docker": "cross-env DOCKER_BUILDKIT=1 docker build -f Dockerfile -t auth-manager ../.. ",
    "build:docker-no-cache": "cross-env DOCKER_BUILDKIT=1 docker build --no-cache -f Dockerfile -t auth-manager ../.. ",
    "start": "npm run build && cd dist && node --import ./instrumentation.mjs ./index.js",
    "start:dev": "npm run build && cd dist && cross-env CONFIG_OFFLINE_MODE=true  node --enable-source-maps --import ./instrumentation.mjs ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./openapi3.yaml ./dist/ && copyfiles ./dataSource.mjs dist && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "generate:openapi-types": "openapi-helpers ./openapi3.yaml ./src/openapi.d.ts --format --add-typed-request-handler"
  },
  "bugs": {
    "url": "https://github.com/MapColonies/opa-la/issues"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.11.2",
    "@map-colonies/auth-core": "^1.2.0",
    "@map-colonies/config": "^2.2.1",
    "@map-colonies/error-express-handler": "^2.1.0",
    "@map-colonies/express-access-log-middleware": "^2.0.1",
    "@map-colonies/js-logger": "^1.0.1",
    "@map-colonies/openapi-express-viewer": "^3.0.0",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/schemas": "^1.1.0",
    "@map-colonies/telemetry": "^10.0.1",
    "@opentelemetry/api": "^1.9.0",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.3",
    "http-status-codes": "^2.2.0",
    "jose": "^5.1.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.9.1",
    "typeorm": "^0.3.12",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@map-colonies/openapi-helpers": "^2.0.0",
    "@types/compression": "^1.7.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.5",
    "@types/pg": "^8.6.6",
    "@types/pg-pool": "^2.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.3",
    "copyfiles": "^2.4.1",
    "jest-extended": "^3.2.4",
    "rimraf": "^4.4.0",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "type-fest": "^4.40.0"
  }
}
